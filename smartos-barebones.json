{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "vm_name": "smartos-barebones",
      "guest_additions_mode": "disable",
      "source_path": "smartos-seed.ovf",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_wait_timeout": "2h",
      "vboxmanage": [
        ["createhd", "--filename", "{{.Name}}-disk2.vmdk", "--format", "VMDK",
          "--size", "20000"],
        ["storageattach", "{{.Name}}", "--storagectl", "ide0", "--port", "0",
          "--device", "1", "--type", "hdd", "--medium", "{{.Name}}-disk2.vmdk"]
      ],
      "boot_wait": "4s",
      "boot_command": "<enter><wait10><wait10><wait10><wait10><wait5><enter>dhcp<enter>c0d1<enter>packer<enter>packer<enter><enter><enter>y<enter>",
      "shutdown_command": "poweroff"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "smartos-barebones-{{.Provider}}.box",
      "keep_input_artifact": true
    }
  ]
}
